{
	"name": "cat-hero-tools-frontend",
	"private": true,
	"version": "0.0.1",
	"homepage": "https://cathero.tools/",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"test": "vitest",
		"coverage": "vitest --coverage",
