		"stylelint": "^16.1.0",
		"stylelint-config-standard": "^36.0.0",
		"tailwindcss": "^3.4.1",
		"typedoc": "^0.25.7",
		"typescript": "^5.3.3",
		"vite": "^5.0.12",
		"vitest": "^1.6.0"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "4.6.1"
	}
